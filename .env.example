# EDI 997 Validator Environment Configuration
# Copy this file to .env and customize as needed

# Application Environment (development, production, testing)
APP_ENV=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, simple, detailed
ENABLE_CONSOLE_COLORS=true
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=logs/validator.log

# Validation Settings
VALIDATION_STRICT_MODE=false
MAX_ERRORS_BEFORE_ABORT=0
REQUIRE_OUTBOUND_MATCH=false

# Parser Settings
AUTO_DETECT_DELIMITERS=true
TRIM_WHITESPACE=true
MAX_FILE_SIZE_MB=10

# Reconciliation Settings
MATCH_TOLERANCE_SECONDS=300
REPORT_UNMATCHED=true
REPORT_ORPHANED=true

# Performance Settings
ENABLE_PROFILING=false
SLOW_OPERATION_THRESHOLD=1.0
ENABLE_CACHING=false
MAX_CACHE_SIZE=100

# Reporting Settings
MAX_ERRORS_PER_TRANSACTION=100
INCLUDE_ACCEPTED_IN_REPORT=false
GROUP_ERRORS_BY_SEGMENT=true
SORT_BY_SEVERITY=true

# Output Settings
OUTPUT_JSON=true
OUTPUT_MARKDOWN=true
OUTPUT_HTML=false
OUTPUT_EXCEL=false
DEFAULT_OUTPUT_DIR=output

# Paths (relative to project root)
CONFIG_DIR=config
EXAMPLES_DIR=examples
TESTS_FIXTURES_DIR=tests/fixtures

# API Settings (if using FastAPI - future enhancement)
# API_HOST=0.0.0.0
# API_PORT=8000
# API_RELOAD=true

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME=light

# Security (if needed for future features)
# SECRET_KEY=your-secret-key-here
# API_KEY=your-api-key-here

# Database (if persistence added in future)
# DB_PATH=data/validator.db
# DB_ECHO=false

# External Integrations (future)
# OUTBOUND_LOG_API_URL=https://api.example.com/outbound
# OUTBOUND_LOG_API_KEY=your-api-key
