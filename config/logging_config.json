{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "json": {
      "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(funcName)s %(lineno)d %(message)s"
    },
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "detailed": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(funcName)s() - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "filters": {
    "info_and_below": {
      "()": "src.utils.logger.MaxLevelFilter",
      "level": "INFO"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "console_detailed": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "stream": "ext://sys.stdout"
    },
    "file_json": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/validator.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_errors": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "logs/errors.log",
      "maxBytes": 5242880,
      "backupCount": 3,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "src": {
      "level": "DEBUG",
      "handlers": ["console", "file_json", "file_errors"],
      "propagate": false
    },
    "cli": {
      "level": "INFO",
      "handlers": ["console", "file_json"],
      "propagate": false
    },
    "ui": {
      "level": "INFO",
      "handlers": ["console", "file_json"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "file_json"]
  }
}
